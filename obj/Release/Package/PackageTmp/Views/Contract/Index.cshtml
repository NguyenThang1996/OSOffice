                <input type="text" id="txtsearchctr" class="form-control" placeholder="Tìm kiếm...">
                <span class="input-group-addon">
                    <button type="button" id="btn-searchctr">
                        <span class="glyphicon glyphicon-search" style="color: #000000!important;"></span>
                    </button>
                </span>
            </div>
        </div>
        <div class="col-md-2" style="padding-left: 0px!important;">
            <div class="form-group">
                <select class="form-control" id="sanpham1">     
                </select>
            </div>
        </div>
        <div class="col-md-2" style="padding-left: 0px!important;">
            <div class="form-group">
                <select class="form-control" id="phanloai">
                    <option value="0">Phân loại</option>
                    <option value="1">Hợp đồng thu</option>
                    <option value="2">Hợp đồng chi</option>
                </select>
            </div>
        </div>
        <div class="col-md-2" style="padding-left: 0px!important;">
            <div class="form-group">
                <select class="form-control" id="nhomhd1">                    
                </select>
            </div>
        </div>
        <div class="col-md-2" style="padding-left: 0px!important;">
            <div class="form-group">
                <select class="form-control" id="ttqt1">
                    <option value="0">TT quyết toán</option>
                    <option value="1">Chưa thanh toán</option>
                    <option value="2">Đã tạm ứng</option>
                    <option value="3">Đã thanh toán xong</option>
                </select>
            </div>
        </div>
        <table id="tbl_contract" class="table table-bordered table-hover table-responsive" style="height: calc(100vh - 450px)!important;">
            <thead>
                <tr>
                    <th style="text-align: center; vertical-align: middle;">STT</th>
                    <th style="text-align: center; vertical-align: middle;">Số hợp đồng</th>
                    <th style="text-align: center; vertical-align: middle;">Ngày ký</th>
                    <th style="text-align: center; vertical-align: middle;">Khách hàng</th>
                    <th style="text-align: center; vertical-align: middle;">Phân loại</th>
                    <th style="text-align: center; vertical-align: middle;">Nhóm</th>
                    <th style="text-align: center; vertical-align: middle;">Trạng thái quyết toán</th>
                    <th style="text-align: center; vertical-align: middle;">
                        <img src="~/Images/Logo/support.png" />
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        <label class="checkbox-inline"><input type="checkbox" id="check-all" value=""></label>
                    </th>
                </tr>
            </thead>
            <tbody id="tblbody_contract"></tbody>
        </table>
        <div class="pagination" id="pagination">
        </div>
        <div class="crud">
            <div class="col-md-12 col-md-push-3" style="margin-top: 8px;">
