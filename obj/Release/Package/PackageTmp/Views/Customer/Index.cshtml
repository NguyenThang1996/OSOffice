    <tr>
        <td style="text-align: center; vertical-align: middle;">{{NumberialOrder}}</td>
        <td style="text-align: center; vertical-align: middle;">
            <a data-id="{{Customer_ID}}" class="edit-cus" data-toggle="modal" data-target="#myModal" href="#" id="edit1" style="color: #000000!important;">
                {{CusName}}
            </a>
        </td>
        <td style="text-align: center; vertical-align: middle;">{{Address}}</td>
        <td style="text-align: center; vertical-align: middle;">{{Tel}}</td>
        <td style="text-align: center; vertical-align: middle;">{{Email}}</td>
        <td style="text-align: center; vertical-align: middle;">
            <a href="#" class="edit-cus" data-id="{{Customer_ID}}" data-toggle="modal" data-target="#myModal" style="text-decoration: none;">
                <img src="/Images/Image/edit.png" />
